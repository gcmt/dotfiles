#!/usr/bin/env python

import sys
import time
import argparse
from pathlib import Path
from datetime import datetime
from subprocess import run


def parse_args():
    parser = argparse.ArgumentParser(allow_abbrev=False)
    parser.add_argument('-root', action="store_true", default=False)
    parser.add_argument('-wait', type=int, nargs='?', const=4)
    return parser.parse_known_args()


def main():

    args, import_args = parse_args()

    cmd = ['import'] + import_args

    if args.wait:
        id = '6677'
        for s in reversed(range(1, args.wait+1)):
            run(['dunstify', '-r', id, f'Screenshot in {s} seconds', ''])
            time.sleep(1)
        run(['dunstify', '-C', id, '', ''])
        time.sleep(0.5)

    if args.root:
        cmd += ['-win', 'root']

    timestamp = datetime.now().strftime('%Y-%m-%d-%T')
    dest = Path.home() / f'Downloads/Screenshot_{timestamp}.png'

    proc = run(cmd + [dest])
    if proc.returncode:
        sys.exit(1)

    print(f"Screen captured at {dest}")


if __name__ == '__main__':
    main()
