#!/bin/bash

workspaces=$(i3-msg -t get_workspaces)

workspace_exists() {
	echo "$workspaces" | jq -e ".[] | select(.num==$1)" >/dev/null
}

main() {
	local num=1
	while (( num < 10 )); do
		if ! workspace_exists $num; then
			i3-msg "move container to workspace number $num" >/dev/null
			i3-msg "workspace number $num" >/dev/null
			break
		fi
		num=$(expr $num + 1)
	done
}

main
