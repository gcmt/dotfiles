#!/bin/bash


ask_for_workspace() {

	local opts
	opts="-dmenu -p 'Move to' -theme 'i3-input'"
	opts+=" -kb-custom-1 'Control+Return'"

	local name rofi_exit
	name="$(eval "rofi $opts")"
	rofi_exit=$?

	# strip whitespaces
	name="$(sed 's/\(\s\+$\|^\s\+\)//g' <<< "$name")"

	if (( rofi_exit == 1 )); then
		exit 1
	fi

	if [[ -z "$name" ]]; then
		# automatically pick a workspace when no name is given
		case $rofi_exit in
			10) i3-move-to-workspace -auto -nofollow ;;
			*) i3-move-to-workspace -auto ;;
		esac
	else
		local follow=1
		if [[ "$name" =~ ^_scratch$ || $rofi_exit == 10 ]]; then
			follow=0
		fi
		move_to_workspace "$name" "$follow"
	fi

}


move_to_workspace() {
	local target="$1" follow="$2"
	local cmd num
	if [[ "$target" =~ ^[0-9]+$ ]]; then
		num="number"
	fi
	cmd="move to workspace $num \"$target\""
	if (( follow == 1 )); then
		cmd="$cmd; workspace $num \"$target\""
	fi
	i3-msg "$cmd" >/dev/null
}


first_available_workspace() {
	local num=1
	local workspaces="$(i3-msg -t get_workspaces | jq '.[] | .num')"
	while (( num < 10 )); do
		if ! grep -q "$num" <<< "$workspaces"; then
			echo "$num"
			break
		fi
		(( num += 1 ))
	done
}


print_usage() {
	echo "Usage: $(basename "$0") [-ask] [-auto] [-nofollow] [WORKSPACE]" 1>&2
}

if (( $# == 0 )); then
	print_usage && exit 1
fi

ask=0
auto=0
next=0
prev=0
follow=1
target=

while (( $# )); do
	if [[ "$1" == "-nofollow" ]]; then
		follow=0
	elif [[ "$1" == "-auto" ]]; then
		auto=1
	elif [[ "$1" == "-ask" ]]; then
		ask=1
	elif [[ "$1" == "-next" ]]; then
		next=1
	elif [[ "$1" == "-prev" ]]; then
		prev=1
	elif [[ "$1" =~ ^[^-] ]]; then
		target="$1"
	elif [[ "$1" == "-help" ]]; then
		print_usage && exit 0
	else
		echo "Unknown option: $1" 1>&2
		print_usage && exit 1
	fi
	shift
done

if (( ask == 1 )); then
	ask_for_workspace
else
	wsnum="$(i3-msg -t get_workspaces | jq -r '.[] | .name' | grep -cv '^_')"
	if (( auto == 1 )); then
		target="$(first_available_workspace)"
	elif (( wsnum == 1 && (next == 1 || prev == 1) )); then
		target="$(first_available_workspace)"
	elif (( next == 1 )); then
		target="$(i3-next-workspace -next -dry)"
	elif (( prev == 1 )); then
		target="$(i3-next-workspace -prev -dry)"
	fi
	if [[ -z "$target" ]]; then
		exit 1
	fi
	move_to_workspace "$target" "$follow"
fi
