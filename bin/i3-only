#!/usr/bin/env python

import i3ipc
from subprocess import run


def main():
    i3 = i3ipc.Connection()
    focused = i3.get_tree().find_focused()
    for w in focused.workspace().leaves():
        if w.window != focused.window:
            run(['xkill', '-id', f'{w.window}'])


if __name__ == '__main__':
    main()
