#!/usr/bin/env zsh

main() {

	local root="$HOME/Notes"

   local entry
	local rofi_exit

	entry=$(rg --files $root | sed "s:^$root/::" | rofi -dmenu -no-auto-select -p 'notes: ')
	rofi_exit=$?

	if [[ -z "$entry" || $rofi_exit == 1 ]]; then
		return 1
	fi

	termite -e "vim -c 'norm! zz' '$root/$entry'" --class "Notes"
}

main "$@"
