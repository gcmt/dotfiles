#!/bin/bash

resp=$(yad \
    --form \
    --columns=1 \
    --title 'Youtube Downloader' \
    --text "<b>Youtube Downloader</b>" \
    --borders 10 \
    --separator $'\t' \
    --width 500 \
    --text-align fill \
    --field "" "" \
    --field "Only Audio:chk" TRUE \
    --field "Low Resolution:chk" FALSE \
    --button="Cancel":1 \
    --button="Download":0 \
)

IFS=$'\t' read -ra fields <<< "${resp}"

url=${fields[0]}
if [[ -z "${url}" ]]; then
    exit 1
fi

extract=
if [[ "${fields[1]}" == "TRUE" ]]; then
    extract="-x"
fi

low_res=
if [[ "${fields[2]}" == "TRUE" ]]; then
    low_res="-l"
fi

yd ${extract} ${low_res} "${url}"
