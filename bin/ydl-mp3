#!/bin/sh

selection=$(xclip -o -sel primary)
if [ -n "$selection" ]; then
	notify-send 'Download started' "Downloading song to ~/Downloads"
	cd ~/Downloads
	youtube-dl -x --audio-format mp3 "$selection"
	if [ $? -eq 0 ]; then
		notify-send 'Download finished' "Song successfully downloaded to ~/Downloads"
	else
		notify-send 'Download error' "Youtube-dl returned error code $?"
	fi
else
	notify-send 'Download error' "Nothing currently selected"
fi
