[alias]
	aa = add --all
	ap = add --patch
	co = commit
	ck = checkout
	ss = status
	amend = commit --amend --reuse-message=HEAD
	ll = log --graph --pretty=format:'%C(red)%h%Creset -%C(magenta)%d%Creset %s (%cr) <%an>' --abbrev-commit --date=relative
[color]
	ui = auto
[color "branch"]
	current = magenta
	local = cyan
	remote = blue
[color "decorate"]
	head = cyan
	branch = green
[color "diff"]
	meta = blue
	frag = yellow
	old = red
	new = green
[color "status"]
	added = green
	changed = yellow
	untracked = white
[cola]
	spellcheck = true
	tabwidth = 4
