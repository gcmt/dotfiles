client.placeholder      #e7e8eb  #e7e8eb  #8e9299  #ce7d86  #e7e8eb

client.background       #e7e8eb

# Status Bar
# ----------------------------------------------------------------------------

bar {
	i3bar_command $HOME/.config/polybar/start.sh
}
