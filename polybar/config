
; Colors
; ----------------------------------------------------------------------------

[colors]

; dark
; background = #ef1e222b
; foreground = #df8e9299
; blue = #657B99
; cyan = #739492
; green = #768A78
; magenta = #917086
; red = #945F65
; orange = #998068
; yellow = #A39465
; alert = #aaaf5d66

; light
background = #e7e8eb
foreground = #52565e
blue = #657B99
cyan = #739492
green = #768A78
magenta = #917086
red = #945F65
orange = #998068
yellow = #A39465
alert = #ce7d86

; Settings
; ----------------------------------------------------------------------------

[settings]

screenchange-reload = true

; Wm
; ----------------------------------------------------------------------------

[global/wm]

margin-top = 5
margin-bottom = 5

; Main bar
; ----------------------------------------------------------------------------

[bar/main]

monitor = ${env:MONITOR_PRIMARY}

width = 100%
height = 32
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

border-left-size = 5
border-right-size = 5
border-top-size = 6
border-bottom-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 3
module-margin-right = 0

font-0 = "Noto Mono:style=Medium:size=10;3"
font-1 = "Font Awesome 5 Free:style=Solid:size=10;3"
font-2 = "Font Awesome 5 Free:style=Regular:size=10;3"

modules-left = i3
modules-center = datetime
modules-right = rec backup wlan eth volume battery timer stopwatch

; i3
; ----------------------------------------------------------------------------

[module/i3]

type = custom/script
exec = ~/.config/polybar/modules/i3
label = %output%
tail = true

; Battery
; ----------------------------------------------------------------------------

[module/battery]

type = custom/script
exec = ~/.config/polybar/modules/battery
label = %output%
tail = true

; Date & time
; ----------------------------------------------------------------------------

[module/datetime]

type = custom/script
exec = ~/.config/polybar/modules/datetime
tail = true

click-right = ~/.config/polybar/modules/datetime -menu

label = %output%

; Volume
; ----------------------------------------------------------------------------

[module/volume]

type = custom/script
exec = ~/.config/polybar/modules/volume
tail = true

label = %output%

; Backup
; ----------------------------------------------------------------------------

[module/backup]

type = custom/script
exec = ~/.config/polybar/modules/backup
tail = true

click-left = ~/.config/polybar/modules/backup click-left
click-right = ~/.config/polybar/modules/backup click-right

label = %output%

; Timer
; ----------------------------------------------------------------------------

[module/timer]

type = custom/script
exec = ~/.config/polybar/modules/timer
tail = true

click-left = ~/.config/polybar/modules/timer -stop

label =  %output%

; Stopwatch
; ----------------------------------------------------------------------------

[module/stopwatch]

type = custom/script
exec = ~/.config/polybar/modules/stopwatch
tail = true

click-left = ~/.config/polybar/modules/stopwatch stop

label =  %output%

; Screen Recording
; ----------------------------------------------------------------------------

[module/rec]

type = custom/script
exec = ~/.config/polybar/modules/recording
tail = true

click-left = ~/.config/polybar/modules/recording -stop

label = %output%

; Wifi
; ----------------------------------------------------------------------------

[module/wlan]

type = custom/script
exec = ~/.config/polybar/modules/wlan wlp2s0
interval = 1

label = %output%

; Ethernet
; ----------------------------------------------------------------------------

[module/eth]

type = custom/script
exec = ~/.config/polybar/modules/eth enp5s0
interval = 1

label = %output%

