#!/bin/bash


stop_recording() {
	if [[ -f "$pidfile" ]]; then
		kill "$(cat "$pidfile")"
		echo stop > "$fifo"
	fi
}


main() {
	local output="ï…„ Recording"
	if [[ -f "$pidfile" ]]; then
		echo "$output"
	fi
	while true; do
		if read -r cmd < "$fifo"; then
			case $cmd in
				start) echo "$output" ;;
				stop) echo ;;
			esac
		fi
	done
}


pidfile="/run/user/$UID/rec.pid"
metafile="/run/user/$UID/rec.out"

fifo="/tmp/polybar_recording.fifo"
if [[ ! -p "$fifo" ]]; then
	mkfifo "$fifo"
fi

case "$1" in
	-stop) stop_recording ;;
	*) main ;;
esac
